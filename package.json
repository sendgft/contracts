{
  "name": "@sendgft/contracts",
  "version": "1.25.0",
  "description": "gft.xyz smart contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**",
    "contracts.generated.js",
    "artifacts/**",
    "contracts/**",
    "deployedAddresses.json",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "prepare": "husky install",
    "devnet": "hardhat node",
    "devnet-ci": "yarn devnet >ganache.log 2>&1 &",
    "clean": "rm -rf ./cache && rm -rf ./artifacts",
    "test": "hardhat test",
    "coverage": "rm -rf coverage && yarn hardhat coverage",
    "generate-index": "./scripts/generateIndex.js",
    "compile": "yarn clean && yarn hardhat compile && yarn generate-index",
    "setup-deploy-config:local": "./scripts/setupDeployConfig.js --network=localhost",
    "setup-deploy-config:rinkeby": "./scripts/setupDeployConfig.js --network=rinkeby",
    "setup-deploy-config:avax": "./scripts/setupDeployConfig.js --network=avax",
    "deploy:local": "yarn hardhat run --network localhost ./deploy",
    "deploy:rinkeby": "yarn hardhat run --network rinkeby ./deploy",
    "deploy:avax": "yarn hardhat run --network avax ./deploy",
    "release": "tsc && semantic-release",
    "lint": "solhint --config ./.solhint.json contracts/**/*.sol"
  },
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/register": "^7.15.3",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-truffle5": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@sendgft/ipfs-tools": "^1.3.0",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "bigval": "^1.5.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.4.2",
    "commitlint-config-jira": "^1.5.1",
    "commitlint-plugin-jira-rules": "^1.5.1",
    "core-js": "^3.18.0",
    "coveralls": "^3.0.6",
    "delay": "^5.0.0",
    "dotenv": "^10.0.0",
    "eth-hd-wallet": "^0.5.1",
    "ethereum-event-logs": "^1.3.1",
    "ethereumjs-util": "^7.0.7",
    "ethers": "^5.4.7",
    "git-last-commit": "^1.0.0",
    "glob": "^7.1.6",
    "got": "^11.1.4",
    "hardhat": "^2.9.6",
    "husky": "^6.0.0",
    "lodash": "^4.17.21",
    "regenerator-runtime": "^0.13.9",
    "semantic-release": "^18.0.0",
    "semver": "^7.3.5",
    "solc": "=0.6.12",
    "solhint": "^2.2.0",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "yargs": "^17.3.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/contracts": "^5.5.0",
    "@openzeppelin/contracts": "^4.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
